RewriteEngine On

# Handle API routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route for admin inquiries with ID
RewriteRule ^admin/inquiries/([0-9]+)$ admin/inquiries.php [QSA,L]

# Route for admin inquiries
RewriteRule ^admin/inquiries$ admin/inquiries.php [QSA,L]

# Allow direct access to PHP files
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.+\.php)$ $1 [L]

# Set proper headers for API
<FilesMatch "\.(php)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
</FilesMatch>